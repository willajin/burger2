<div class="container">

    <h1 class="header">Eat-Da-Burger!</h1>

    <div class="row">
        <div class="col s6">
            <h3 class="subheader"><i class="fas fa-hamburger"></i> Undevoured Burgers</h3>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li class="burgerList"></li>{{this.id}} : {{this.burger_name}}
                <button type="button" class="devourButton btn waves-effect waves-light grey" id="devourBtn" data-id="{{this.id}}" data-devoured="{{devour}}"><i class="fas fa-utensils"></i>  Devour</button> 
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col s6">
            <h3 class="subheader"><i class="fas fa-hamburger"></i> Devoured Burgers</h3>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li class="burgerList"></li>{{this.id}} : {{ this.burger_name}}
                <button type="button" class="deleteButton btn waves-effect waves-light grey" id="deleteBtn" data-id="{{this.id}}" data-devoured="{{devour}}"><i class="fas fa-trash-alt"></i>  Delete</button> 
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <form class="add-form">
        <div class="row">
            <div class="col s12">
                Add a Burger:
                <div class="input-field inline">
                    <input id="newBurger" type="text">
                </div>
            </div>
        </div>
        <button id="addButton" class="btn waves-effect waves-light grey" type="submit" name="action"><i class="fas fa-plus-circle"></i>  Add Burger</button>
    </form>

</div>